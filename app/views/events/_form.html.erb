  <%= f.error_messages %>
  <p>
    <%= f.label :list_id %><br />
    <%= collection_select("event", "list_id", @lists, "id", "name") %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :location_id %><br />
    <%= collection_select("event", "location_id", @locations, "id", "name") %>
  </p>
  <p>
    <%= f.label :start %><br />
    <%= f.calendar_date_select :start, :time => true, :onchange => "$('event_end').setValue($F('event_start'));" %>
  </p>
  <p>
    <%= f.label :end %><br />
    <%= f.calendar_date_select :end, :time => true %>
  </p>
