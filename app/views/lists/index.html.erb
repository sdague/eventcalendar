<h1>Listing lists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>From</th>
  </tr>

<% for list in @lists %>
  <tr>
    <td><%=h list.name %></td>
    <td><%=h list.address %></td>
    <td><%=h list.from %></td>
    <td><%= link_to 'Show', list %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
  <% for event in list.events.sort_by {|a| a.start.to_datetime} %>
  <tr>
    <td></td>
    <th><%=h event.name %></th>
    <td><%=h event.start.to_datetime.strftime("%b %d, %Y - %H:%M") %></td>
    <td><%= link_to 'Show', event %></td>
  </tr>
  <% end %>
<% end %>
</table>

<br />
